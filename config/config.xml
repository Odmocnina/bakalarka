<?xml version="1.0" encoding="UTF-8"?>
<config>
    <numberOfRoads>20</numberOfRoads>
    <roadFile>config/roads/road1.xml</roadFile>

    <models>
        <carFollowingModel>
            <id>helly</id>
        </carFollowingModel>
        <laneChangingModel>
            <id>rickert</id>
        </laneChangingModel>
    </models>

    <generator>
        <flowRate>0.1</flowRate>
        <carParams>
            <maxSpeed>
                <minValue>50</minValue>
                <maxValue>100</maxValue>
            </maxSpeed>
            <length>
                <minValue>3</minValue>
                <maxValue>7</maxValue>
            </length>
            <maxAcceleration>
                <minValue>2</minValue>
                <maxValue>2</maxValue>
            </maxAcceleration>
            <minimumGapToNextCar>
                <minValue>2</minValue>
                <maxValue>5</maxValue>
            </minimumGapToNextCar>
            <decelerationComfort>
                <minValue>2</minValue>
                <maxValue>5</maxValue>
            </decelerationComfort>
            <desiredTimeHeadway>
                <minValue>1</minValue>
                <maxValue>3</maxValue>
            </desiredTimeHeadway>
            <speedDifferenceSensitivity>
                <minValue>0.5</minValue>
                <maxValue>1.5</maxValue>
            </speedDifferenceSensitivity>
            <distanceDifferenceSensitivity>
                <minValue>0.5</minValue>
                <maxValue>1.5</maxValue>
            </distanceDifferenceSensitivity>
        </carParams>
    </generator>

    <runDetails>
        <showGui>true</showGui>
        <drawCells>false</drawCells>
        <timeStep>1</timeStep>
        <duration>60</duration>
        <outputFile>output/simulationContOutput.txt</outputFile>
    </runDetails>


</config>