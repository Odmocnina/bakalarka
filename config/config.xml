<?xml version="1.0" encoding="UTF-8"?>
<config>
    <numberOfRoads>50</numberOfRoads>
    <roadFile>config/roads/road1.xml</roadFile>

    <models>
        <carFollowingModel>
            <id>fvdm</id>
        </carFollowingModel>
        <laneChangingModel>
            <id>mobil</id>
        </laneChangingModel>
    </models>

    <generator>
        <flowRate>0.2</flowRate>
        <carParams>
            <maxSpeed>
                <minValue>20</minValue>
                <maxValue>100</maxValue>
            </maxSpeed>
            <length>
                <minValue>7</minValue>
                <maxValue>7</maxValue>
            </length>
            <maxAcceleration>
                <minValue>2</minValue>
                <maxValue>2</maxValue>
            </maxAcceleration>
            <minimumGapToNextCar>
                <minValue>5</minValue>
                <maxValue>5</maxValue>
            </minimumGapToNextCar>
            <decelerationComfort>
                <minValue>2</minValue>
                <maxValue>5</maxValue>
            </decelerationComfort>
            <desiredTimeHeadway>
                <minValue>1</minValue>
                <maxValue>3</maxValue>
            </desiredTimeHeadway>
            <speedDifferenceSensitivity>
                <minValue>0.5</minValue>
                <maxValue>1.5</maxValue>
            </speedDifferenceSensitivity>
            <distanceDifferenceSensitivity>
                <minValue>0.5</minValue>
                <maxValue>1.5</maxValue>
            </distanceDifferenceSensitivity>
            <edgeValueForLaneChange>
                <minValue>0.1</minValue>
                <maxValue>0.3</maxValue>
            </edgeValueForLaneChange>
            <politenessFactor>
                <minValue>0.0</minValue>
                <maxValue>1.0</maxValue>
            </politenessFactor>
        </carParams>
    </generator>

    <runDetails>
        <showGui>true</showGui>
        <drawCells>false</drawCells>
        <timeStep>1</timeStep>
        <duration>200</duration>
        <logging>
            <log>true</log>
            <info>true</info>
            <warn>true</warn>
            <debug>false</debug>
            <error>true</error>
            <fatal>true</fatal>
        </logging>
        <output>
            <writeOutput>true</writeOutput>
            <file>output/simulationContOutput.csv</file>
            <type>csv</type>
        </output>
        <outputFile>output/csvOutput.csv</outputFile>
        <timeBetweenSteps>100</timeBetweenSteps>
    </runDetails>


</config>