<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<config>
    <numberOfRoads>20</numberOfRoads>
    <roadFile>config/roads/road1.xml</roadFile>
    <models>
        <carFollowingModel>
            <id>idm</id>
        </carFollowingModel>
        <laneChangingModel>
            <id>mobil</id>
        </laneChangingModel>
    </models>
    <generator>
        <flowRate>0.7</flowRate>
        <queue>
            <use>false</use>
            <minValue>100</minValue>
            <maxValue>100</maxValue>
        </queue>
        <carParams>
            <maxSpeed>
                <minValue>5</minValue>
                <maxValue>20</maxValue>
            </maxSpeed>
            <length>
                <minValue>3</minValue>
                <maxValue>9</maxValue>
            </length>
            <maxAcceleration>
                <minValue>1</minValue>
                <maxValue>1.5</maxValue>
            </maxAcceleration>
            <minimumGapToNextCar>
                <minValue>10</minValue>
                <maxValue>10</maxValue>
            </minimumGapToNextCar>
            <decelerationComfort>
                <minValue>2</minValue>
                <maxValue>3</maxValue>
            </decelerationComfort>
            <desiredTimeHeadway>
                <minValue>1</minValue>
                <maxValue>3</maxValue>
            </desiredTimeHeadway>
            <speedDifferenceSensitivity>
                <minValue>0.5</minValue>
                <maxValue>0.5</maxValue>
            </speedDifferenceSensitivity>
            <distanceDifferenceSensitivity>
                <minValue>1.5</minValue>
                <maxValue>2.2</maxValue>
            </distanceDifferenceSensitivity>
            <edgeValueForLaneChange>
                <minValue>0.1</minValue>
                <maxValue>0.3</maxValue>
            </edgeValueForLaneChange>
            <politenessFactor>
                <minValue>0.0</minValue>
                <maxValue>1.0</maxValue>
            </politenessFactor>
        </carParams>
    </generator>
    <runDetails>
        <showGui>true</showGui>
        <drawCells>false</drawCells>
        <laneChange>false</laneChange>
        <timeStep>1</timeStep>
        <duration>5000</duration>
        <debug>true</debug>
        <preventCollision>false</preventCollision>
        <logging>
            <log>true</log>
            <info>true</info>
            <warn>true</warn>
            <debug>true</debug>
            <error>true</error>
            <fatal>true</fatal>
        </logging>
        <output>
            <writeOutput>true</writeOutput>
            <file>output/simulationContOutputIDM2.csv</file>
            <type>csv</type>
            <csvSeparator>;</csvSeparator>
            <whatToWrite>
                <simulationDetails>true</simulationDetails>
                <simulationTime>true</simulationTime>
                <carsPassed>true</carsPassed>
                <carsOnRoad>true</carsOnRoad>
                <roadDetails>true</roadDetails>
                <generationDetails>true</generationDetails>
                <collisionCount>true</collisionCount>
            </whatToWrite>
        </output>
        <timeBetweenSteps>100</timeBetweenSteps>
    </runDetails>
</config>
