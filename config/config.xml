<?xml version="1.0" encoding="UTF-8"?>
<config>
    <numberOfRoads>1</numberOfRoads>
    <roadFile>config/roads/road1.xml</roadFile>

    <models>
        <carFollowingModel>
            <id>idm</id>
        </carFollowingModel>
        <laneChangingModel>
            <id>mobil</id>
        </laneChangingModel>
    </models>

    <generator>
        <flowRate>0.2</flowRate>
        <queue>
            <use>true</use>
            <minValue>1</minValue>
            <maxValue>2</maxValue>
        </queue>
        <carParams>
            <maxSpeed>
                <minValue>5</minValue>
                <maxValue>20</maxValue>
            </maxSpeed>
            <length>
                <minValue>3</minValue>
                <maxValue>9</maxValue>
            </length>
            <maxAcceleration>
                <minValue>1</minValue>
                <maxValue>1.5</maxValue>
            </maxAcceleration>
            <minimumGapToNextCar>
                <minValue>10</minValue>
                <maxValue>10</maxValue>
            </minimumGapToNextCar>
            <decelerationComfort>
                <minValue>2</minValue>
                <maxValue>3</maxValue>
            </decelerationComfort>
            <desiredTimeHeadway>
                <minValue>1</minValue>
                <maxValue>3</maxValue>
            </desiredTimeHeadway>
            <speedDifferenceSensitivity>
                <minValue>0.5</minValue>
                <maxValue>0.5</maxValue>
            </speedDifferenceSensitivity>
            <distanceDifferenceSensitivity>
                <minValue>1.5</minValue>
                <maxValue>2.2</maxValue>
            </distanceDifferenceSensitivity>
            <edgeValueForLaneChange>
                <minValue>0.1</minValue>
                <maxValue>0.3</maxValue>
            </edgeValueForLaneChange>
            <politenessFactor>
                <minValue>0.0</minValue>
                <maxValue>1.0</maxValue>
            </politenessFactor>
        </carParams>
    </generator>

    <runDetails>
        <showGui>true</showGui>
        <drawCells>false</drawCells>
        <laneChange>false</laneChange>
        <timeStep>1</timeStep>
        <duration>500</duration>
        <debug>true</debug>
        <logging>
            <log>true</log>
            <info>true</info>
            <warn>true</warn>
            <debug>false</debug>
            <error>true</error>
            <fatal>true</fatal>
        </logging>
        <output>
            <writeOutput>true</writeOutput>
            <file>output/simulationContOutput.txt</file>
            <type>txt</type>
        </output>
        <timeBetweenSteps>10</timeBetweenSteps>
    </runDetails>
</config>