<?xml version="1.0" encoding="UTF-8"?>
<config>
    <numberOfRoads>50</numberOfRoads>
    <roadFile>config/roads/road2.xml</roadFile>

    <models>
        <carFollowingModel>
            <name>rule184</name>
            <id>nagelschreckenberg</id>
        </carFollowingModel>
        <laneChangingModel>
            <name>Minimizing Overall Braking Induced by Lane changes (MOBIL)</name>
            <id>rickert</id>
        </laneChangingModel>
    </models>

    <generator>
        <flowRate>0.1</flowRate>
        <carParams>
            <maxSpeed>
                <minValue>15</minValue>
                <maxValue>25</maxValue>
            </maxSpeed>
            <length>
                <minValue>2</minValue>
                <maxValue>25</maxValue>
            </length>
            <maxAcceleration>
                <minValue>2</minValue>
                <maxValue>2</maxValue>
            </maxAcceleration>
            <minimumGapToNextCar>
                <minValue>2</minValue>
                <maxValue>5</maxValue>
            </minimumGapToNextCar>
            <decelerationComfort>
                <minValue>2</minValue>
                <maxValue>5</maxValue>
            </decelerationComfort>
            <desiredTimeHeadway>
                <minValue>1</minValue>
                <maxValue>3</maxValue>
            </desiredTimeHeadway>
        </carParams>
    </generator>

    <runDetails>
        <showGui>true</showGui>
        <drawCells>false</drawCells>
        <timeStep>1</timeStep>
        <duration>60</duration>
        <outputFile>output/simulationCellOutput.txt</outputFile>
    </runDetails>
</config>