<?xml version="1.0" encoding="UTF-8"?>
<config>
    <numberOfRoads>1</numberOfRoads>
    <roadFile>config/roads/road2.xml</roadFile>

    <models>
        <carFollowingModel>
            <id>head-leading</id>
        </carFollowingModel>
        <laneChangingModel>
            <id>rickert-transsims</id>
        </laneChangingModel>
    </models>

    <generator>
        <queue>
            <use>false</use>
            <minValue>1</minValue>
            <maxValue>1</maxValue>
        </queue>
        <flowRate>0.2</flowRate>
        <carParams>
            <maxSpeed>
                <minValue>20</minValue>
                <maxValue>50</maxValue>
            </maxSpeed>
            <length>
                <minValue>1</minValue>
                <maxValue>8</maxValue>
            </length>
            <maxAcceleration>
                <minValue>2</minValue>
                <maxValue>2</maxValue>
            </maxAcceleration>
            <minimumGapToNextCar>
                <minValue>2</minValue>
                <maxValue>5</maxValue>
            </minimumGapToNextCar>
            <decelerationComfort>
                <minValue>2</minValue>
                <maxValue>5</maxValue>
            </decelerationComfort>
            <desiredTimeHeadway>
                <minValue>1</minValue>
                <maxValue>3</maxValue>
            </desiredTimeHeadway>
            <speedDifferenceSensitivity>
                <minValue>0.5</minValue>
                <maxValue>1.5</maxValue>
            </speedDifferenceSensitivity>
            <distanceDifferenceSensitivity>
                <minValue>0.5</minValue>
                <maxValue>1.5</maxValue>
            </distanceDifferenceSensitivity>
        </carParams>
    </generator>

    <runDetails>
        <showGui>true</showGui>
        <laneChange>true</laneChange>
        <drawCells>false</drawCells>
        <timeStep>1</timeStep>
        <duration>1200</duration>
        <logging>
            <log>true</log>
            <info>true</info>
            <warn>true</warn>
            <debug>false</debug>
            <error>true</error>
            <fatal>true</fatal>
        </logging>
        <output>
            <writeOutput>true</writeOutput>
            <file>output/simulationKKWQ.csv</file>
            <type>csv</type>
        </output>
        <timeBetweenSteps>100</timeBetweenSteps>
    </runDetails>
</config>