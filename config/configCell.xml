<?xml version="1.0" encoding="UTF-8"?>
<config>
    <numberOfRoads>20</numberOfRoads>
    <roadFile>config/roads/road2.xml</roadFile>

    <models>
        <carFollowingModel>
            <name>rule184</name>
            <id>headleading</id>
        </carFollowingModel>
        <laneChangingModel>
            <name>Minimizing Overall Braking Induced by Lane changes (MOBIL)</name>
            <id>rickert</id>
        </laneChangingModel>
    </models>

    <generator>
        <queue>
            <use>true</use>
            <minValue>1</minValue>
            <maxValue>2</maxValue>
        </queue>
        <flowRate>0.7</flowRate>
        <carParams>
            <maxSpeed>
                <minValue>50</minValue>
                <maxValue>100</maxValue>
            </maxSpeed>
            <length>
                <minValue>1</minValue>
                <maxValue>8</maxValue>
            </length>
            <maxAcceleration>
                <minValue>2</minValue>
                <maxValue>2</maxValue>
            </maxAcceleration>
            <minimumGapToNextCar>
                <minValue>2</minValue>
                <maxValue>5</maxValue>
            </minimumGapToNextCar>
            <decelerationComfort>
                <minValue>2</minValue>
                <maxValue>5</maxValue>
            </decelerationComfort>
            <desiredTimeHeadway>
                <minValue>1</minValue>
                <maxValue>3</maxValue>
            </desiredTimeHeadway>
            <speedDifferenceSensitivity>
                <minValue>0.5</minValue>
                <maxValue>1.5</maxValue>
            </speedDifferenceSensitivity>
            <distanceDifferenceSensitivity>
                <minValue>0.5</minValue>
                <maxValue>1.5</maxValue>
            </distanceDifferenceSensitivity>
        </carParams>
    </generator>

    <runDetails>
        <showGui>true</showGui>
        <drawCells>false</drawCells>
        <timeStep>1</timeStep>
        <duration>120</duration>
        <outputFile>output/simulationCellOutput.txt</outputFile>
    </runDetails>
</config>